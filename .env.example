# InstantDB Configuration
NEXT_PUBLIC_INSTANT_APP_ID=your-instant-app-id-here
INSTANT_APP_ADMIN_TOKEN=your-instant-admin-token-here
INSTANT_CLI_AUTH_TOKEN=your-instant-cli-token-here

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=google/gemini-2.5-flash-lite

# Suno API Configuration
SUNO_API_KEY=your-suno-api-key-here
# IMPORTANT: For Vercel, use your deployment URL (e.g., https://songly.vercel.app/api/suno/callback)
# This URL MUST be publicly accessible for Suno to send callbacks when songs are ready
# For local dev with Suno, use ngrok: https://your-ngrok-id.ngrok-free.app/api/suno/callback
SUNO_CALLBACK_URL=https://your-deployment-url.vercel.app/api/suno/callback

# Backfill Secret (should match INSTANT_APP_ADMIN_TOKEN)
BACKFILL_SECRET=your-backfill-secret-here

# Conversation Flow Configuration
NEXT_PUBLIC_MIN_CONVERSATION_ROUNDS=6
NEXT_PUBLIC_MAX_CONVERSATION_ROUNDS=10

# Feature Flags
NEXT_PUBLIC_ENABLE_TWO_AGENT_SYSTEM=true
NEXT_PUBLIC_ENABLE_LYRICS_COMPARE=true
NEXT_PUBLIC_ENABLE_ASYNC_GENERATION=false

# Web Push Notifications (VAPID)
# Generate new keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_SUBJECT=mailto:your-email@example.com

# Development Configuration
NEXT_PUBLIC_DEV_MODE=false
# IMPORTANT: Your production domain (e.g., https://songly.vercel.app or https://songly.app)
# This is used by the client for API calls and lyrics callbacks
# NOTE: On Vercel, this can be left empty and the app will auto-detect using window.location.origin
NEXT_PUBLIC_BASE_URL=https://your-deployment-url.vercel.app
# Optional: Only set if different from NEXT_PUBLIC_BASE_URL (usually not needed)
NEXT_PUBLIC_SUNO_CALLBACK_ORIGIN=
